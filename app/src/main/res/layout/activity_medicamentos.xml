<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient"
    android:orientation="vertical"
    tools:context=".MedicamentosActivity"><![CDATA[


    android:layout_height="wrap_content" />

    ]]>

    <TextView
        android:id="@+id/txtNombreTratamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_background"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etBuscadorMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:hint="Buscar..." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btVolverMed"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="0.5"
            android:background="@drawable/input_background"
            android:drawableLeft="@drawable/ic_back_24"
            android:elevation="5dp"
            android:onClick="onClick"
            android:text="VOLVER"
            android:textColor="@color/white"
            android:textStyle="normal"
            app:backgroundTint="@android:color/holo_green_dark" />

        <Button
            android:id="@+id/btnActualizarMed"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="0.5"
            android:background="@drawable/input_background"
            android:drawableLeft="@drawable/ic_baseline_autorenew_24"
            android:elevation="5dp"
            android:onClick="onClick"
            android:text="ACTUALIZAR"
            app:backgroundTint="@android:color/holo_green_dark" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_gravity="center"
        android:layout_width="304dp"
        android:layout_height="234dp"
        android:alpha="0.5"
        app:srcCompat="@drawable/logo_azul_alas" />

<!--    <Button-->
<!--        android:id="@+id/btAtras2"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:onClick="onClick"-->
<!--        android:text="Volver" />-->
</LinearLayout>